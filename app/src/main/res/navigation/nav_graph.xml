<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/main">


    <fragment
        android:id="@+id/main"
        android:name="com.mydigipay.challenge.presentation.ui.fragments.main.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_oauth"
            app:destination="@+id/oauth"
            app:popUpTo="@id/main"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/oauth"
        android:name="com.mydigipay.challenge.presentation.ui.fragments.oauth.OauthFragment"
        android:label="Oauth"
        tools:layout="@layout/fragment_oauth">

        <action
            android:id="@+id/action_oauth_to_profile"
            app:destination="@+id/profile"
            app:popUpTo="@id/oauth"
            app:popUpToInclusive="true"/>
        <argument
            android:name="clientId"
            android:defaultValue=" "
            app:argType="string" />
        <argument
            android:name="clientSecret"
            android:defaultValue=" "
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="com.mydigipay.challenge.presentation.ui.fragments.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/layout_profile">

        <action
            android:id="@+id/action_profile_to_search"
            app:destination="@id/search"/>

    </fragment>


    <fragment
        android:id="@+id/search"
        android:name="com.mydigipay.challenge.presentation.ui.fragments.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/layout_search">

        <action
            android:id="@+id/action_search_to_repo"
            app:destination="@+id/repo"/>

    </fragment>


    <fragment
        android:id="@+id/repo"
        android:name="com.mydigipay.challenge.presentation.ui.fragments.repo.RepoFragment"
        android:label="Repo"
        tools:layout="@layout/layout_repo">

        <action android:id="@+id/action_repo_to_branches"
            app:destination="@+id/branches"
            />

        <argument
            android:name="login"
            app:argType="string" />
    </fragment>

    <fragment android:id="@+id/branches"
        android:name="com.mydigipay.challenge.presentation.ui.fragments.branche.BranchFragment"
        android:label="Branches"
        tools:layout="@layout/layout_branch">


        <argument android:name="name"
            app:argType="string"/>

        <argument android:name="repo"
            app:argType="string"/>

    </fragment>



</navigation>