<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/t9_ic_bell"
            android:tint="@color/textColorPrimary" />

        <TextView
            style="@style/Heading"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/lbl_profile"
            android:textAppearance="@style/FontBold"
            android:textSize="@dimen/font_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:id="@+id/clMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivBg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_image_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">

                            <com.mydigipay.challenge.utils.CircleImageView
                                android:id="@+id/ivProfile"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_marginStart="@dimen/_24sdp"
                                android:src="@drawable/ic_profile"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="@dimen/_2sdp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/Heading"
                                    android:text="@string/username"
                                    android:textAppearance="@style/FontMedium" />

                                <TextView
                                    style="@style/SubHeading"
                                    android:text="@string/designation" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/clMain"
                        android:layout_margin="@dimen/_16sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Profile"
                            android:drawableStart="@drawable/t9_ic_home"
                            android:gravity="fill_vertical"
                            android:text="@string/lbl_offer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_color" />
                        <TextView
                            style="@style/Profile"
                            android:drawableStart="@drawable/t9_ic_home"
                            android:gravity="fill_vertical"
                            android:text="@string/lbl_offer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_color" />
                        <TextView
                            style="@style/Profile"
                            android:drawableStart="@drawable/t9_ic_home"
                            android:gravity="fill_vertical"
                            android:text="@string/lbl_offer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_color" />
                        <TextView
                            style="@style/Profile"
                            android:drawableStart="@drawable/t9_ic_home"
                            android:gravity="fill_vertical"
                            android:text="@string/lbl_offer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_color" />
                        <TextView
                            style="@style/Profile"
                            android:drawableStart="@drawable/t9_ic_home"
                            android:gravity="fill_vertical"
                            android:text="@string/lbl_offer" />

                    </LinearLayout>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>